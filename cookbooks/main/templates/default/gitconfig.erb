[user]
  name = <%= node["user"]["git_username"] %>
  email = <%= node["user"]["git_email"] %>

[core]
  editor = vim

[color]
  ui = true
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  tool = gvimdiff
